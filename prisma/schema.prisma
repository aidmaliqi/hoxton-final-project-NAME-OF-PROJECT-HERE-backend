generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:my-database.db"
}


model User {
  id Int @id @default(autoincrement()) 
  name String @unique
  email String @unique
  password String
  balance Int @default(1000)
  age Int 
}

model Flight {
  id Int @id @default(autoincrement()) 
  departure String
  destination String
  departure_time DateTime
  arrival_time DateTime
  price Int
  seats Int
  airline String @unique
  aircraft_id Int @unique
  class String
}

model Passanger {
  id
  name 
  age 
  gender 
  address


}

